{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/shared/components/*"],
      "@/generated/*": ["./src/generated/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/configs/*": ["./src/configs/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/api/*": ["./src/api/*"],
      "@/utils/*": ["./src/shared/utils/*"],
      "@/hooks/*": ["./src/shared/hooks/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "index.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/pages/[comicId]/[chapterId]"
  ],
  "exclude": ["node_modules"]
}
